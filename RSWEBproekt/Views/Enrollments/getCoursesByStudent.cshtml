@model IEnumerable<RSWEBproekt.Models.Enrollment>

@{
    ViewData["Title"] = "Enrollments";
}

<h1>Courses by selected Student</h1>

<table class="table">
    <thead>
        <tr>
            <th>Course</th>
            <th>Semester</th>
            <th>Grade</th>
            <th>Year</th>
            <th>Seminal url</th>
            <th>Project url</th>
            <th>Exam points</th>
            <th>Seminal points</th>
            <th>Project points</th>
            <th>Additional points</th>
            <th>Finish date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Course.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Semestar)
            </td>
            <td>
                @item.Grade
            </td>
            <td>
                @item.Year
            </td>
            <td>
                @item.SeminalUrl
            </td>
            <td>
                @item.ProjectUrl
            </td>
            <td>
                @item.ExamPoints
            </td>
            <td>
                @item.SeminalPoints
            </td>
            <td>
                @item.ProjectPoints
            </td>
            <td>
                @item.AdditionalPoints
            </td>
            <td>
                @item.FinishDate
            </td>
           
            <td>
                <a asp-action="editByStudent" asp-route-id="@item.EnrollmentID">Edit</a>
            </td>
        </tr>
        }
    </tbody>
</table>