@model RSWEBproekt.ViewModels.TeachersFilterViewModel
@{
    ViewData["Title"] = "Teachers";
}

<h1>Teachers</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Teachers" asp-action="Index" method="get">
    <p>
        Degree: <select asp-for="DegreeString" asp-items="Model.Degrees">
            <option value="">All</option>
        </select>
        Academic Rank: <select asp-for="AcademicRankString" asp-items="Model.AcademicRanks">
            <option value="">All</option>
        </select>
        </p>
    <p>
        First Name: <input type="text" asp-for="FirstNameString" />
        Last Name: <input type="text" asp-for="LastNameString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Teachers[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teachers[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teachers[0].Degree)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teachers[0].AcademicRank)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teachers[0].OfficeNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teachers[0].HireDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teachers[0].Courses1)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Teachers)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Degree)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AcademicRank)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OfficeNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HireDate)
            </td>
            <td>
                @foreach (var course in item.Courses1)
                {
                    <a asp-controller="Courses" asp-action="Details" asp-route-id="@course.CourseID">
                        @Html.DisplayFor(modelItem => course.Title)
                    </a>
                    <br />
                }
                @foreach (var course in item.Courses2)
                {
                    <a asp-controller="Courses" asp-action="Details" asp-route-id="@course.CourseID">
                        @Html.DisplayFor(modelItem => course.Title)
                    </a>
                    <br />
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TeacherId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TeacherId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TeacherId">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
